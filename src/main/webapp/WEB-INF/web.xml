<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">

  <display-name>Cosmotron</display-name>
  <description>Java EE Web Application Client for the Atomic Microservice</description>

  <servlet>
    <servlet-name>CosmotronServlet</servlet-name>
    <servlet-class>com.neptunestation.cosmotron.CosmotronServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CosmotronServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

</web-app>
